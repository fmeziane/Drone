<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="443dp"
            android:background="@color/gray"
            android:gravity="center|top"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:contentDescription="TODO"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/logobmi"


                tools:layout_editor_absoluteY="0dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:background="@color/black"

                >

                <com.dji.sdk.sample.internal.utils.VideoFeedView
                    android:id="@+id/primary_video_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="416dp"
                android:layout_height="132dp"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:gravity="bottom"
                android:scrollbars="vertical"
                android:text="LALA \n LALA \n LALA \n LALA \n LALA \n LALA \n LALA \n LALA \n LALA \n LALA \n"
                android:textAlignment="center"
                android:textSize="50px"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="167dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:layout_marginBottom="20px"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8px"
                android:layout_weight="0.5"
                android:gravity="top|center"
                android:orientation="horizontal"
                android:weightSum="1"
                tools:padding="50px">


                <Button
                    android:id="@+id/Take_off"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:gravity="center"

                    android:text="TakeOff" />

                <Button
                    android:id="@+id/Landing"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Landing" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8px"
                android:layout_weight="0.5"
                android:gravity="bottom|center"
                android:orientation="horizontal"
                android:weightSum="1"
                tools:padding="50px">


                <Button
                    android:id="@+id/Camera_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"

                    android:gravity="center"
                    android:text="Camera View" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


